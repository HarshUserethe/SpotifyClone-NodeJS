<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Connect With Music</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon/icons8-spotify-3d-fluency-32.png">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <link rel="stylesheet" href="/stylesheets/media.css" />
  </head>
  <body>
    <style>
       
       
       
      #errMessage {
        position: absolute;
        bottom: 10vh;
        background-color: transparent;
        color: red;
        border: none;
        font-size: 1.2vw;
        font-family: "circularbook" !important;
      }
      .top{
        display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    margin-top: 3vh;
    margin-left: 78vw;
      }
    </style>



    <div class="box" id="boxlogin">
      
      <div class="top" id="m-hidden" style="position: absolute;">
        <h3 id="lab" class="userx">Already a user?</h3>
        <button id="loginbtn">LOGIN</button>
      </div>

      <div class="left-side">
        <div class="logo"><img src="/images/Spotify.svg" alt="" /></div>
        <div class="elem">
          <div class="txt"><h2>Join the party</h2></div>

          <% if (message.length > 0) { %>
          <div
            class="alert alert-danger"
            style="font-family: circularbook"
            id="errMessage"
          >
            <%= message[0] %>
          </div>
          <% } %>

          <!-- REGISTER A USER  -->
          <div class="form-area" id="register">
            <div class="login-box">
              <!-- <div class="top" id="m-hidden">
                <h3 id="lab" class="userx">Already a user?</h3>
                <button id="loginbtn">LOGIN</button>
              </div> -->
              <form action="/register" method="post">
                <div class="user-box">
                  <input type="text" name="name" required="" />
                  <label>Full Name</label>
                </div>

                <div class="user-box">
                  <input
                    type="text"
                    name="email"
                    required=""
                    class="inputTwo"
                  />
                  <label>Email</label>
                </div>

                <div class="user-box">
                  <input
                    type="password"
                    name="password"
                    required=""
                    class="inputThree"
                  />
                  <label>Password</label>
                </div>
                <center>
                  <input type="submit" value="JOIN" name="" class="joinbtn" />
                </center>
              </form>

              <span
                style="color: #fff; position: absolute; margin-top: 34vh"
                id="or"
                >or</span
              >

              <!-- SIGNUP WITH GOOGLE -->
              <a href="/">
                <button id="signup">
                  <div class="sq">
                    <img src="/images/google-logo-9808.png" alt="" />
                  </div>
                  Sign up with Google
                </button>
              </a>
            </div>
          </div>

          <!-- LOGIN A USER -->
          <div class="form-area" id="login">
            <div class="login-box">
              <form action="/login" method="post">
                <div class="user-box">
                  <input type="text" name="email" required="" class="times" />
                  <label>Email</label>
                </div>

                <div class="user-box">
                  <input
                    type="password"
                    name="password"
                    required=""
                    class="times2"
                  />
                  <label>Password</label>
                </div>
                <center>
                  <input
                    type="submit"
                    value="LOGIN"
                    name=""
                    class="joinbtn"
                    id="loginbutton"
                  />
                </center>
              </form>

              <span
                style="color: #fff; position: absolute; margin-top: 22vh"
                id="or"
                >or</span
              >
              <!-- SIGNUP WITH GOOGLE -->
              <a href="/">
                <button id="signup" class="signupTwo">
                  <div class="sq">
                    <img src="/images/google-logo-9808.png" alt="" />
                  </div>
                  Log-in with Google
                </button>
              </a>
             
            </div>
          </div>
        </div>
        
      </div>
      <div class="right-side">
        <!-- <div class="top">
          <h3 id="lab" class="userx">Already a user?</h3>
          <button id="loginbtn">LOGIN</button>
        </div> -->
        <div class="heading">
          <h1>
            music for <br />
            everyone.
          </h1>
          <p>Millions of songs, No credit card needed.</p>
        </div>
      </div>
    </div>

    <script>
      var flag = 0;
      document.querySelector("#loginbtn").addEventListener("click", function () {
          if (flag === 0) {
            document.querySelector("#register").style.display = "none";
            document.querySelector("#login").style.display = "flex";
            document.querySelector("#loginbtn").textContent = "JOIN";
            document.querySelector("#lab").textContent = "Create an account";
            document.querySelector("#lab").style.left = "4vw";

            

            flag = 1;
          } else {
            document.querySelector("#register").style.display = "flex";
            document.querySelector("#login").style.display = "none";
            document.querySelector("#loginbtn").textContent = "LOGIN";
            document.querySelector("#lab").textContent = "Already a user?";
            document.querySelector("#lab").style.left = "9vw";
            
            flag = 0;
          }
        });
        

        document.querySelector("#signup").addEventListener("click", function(){
          alert("This feature is on the way, Please register your account manually");
        })
        document.querySelector(".signupTwo").addEventListener("click", function(){
          alert("This feature is on the way, Please login your account manually");
        })

      
    </script>

    <script src="/javascripts/main.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
